{
  "manifest_version": 3,
  "name": "Wonderflow",
  "version": "1.1.0",
  "description": "Access your Wonderflow marketing audiences, copy, tracking links, and creative assets.",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://kreufabhriiwgbvoovlz.supabase.co/*"
  ],
  "icons": {
    "16": "wonderflow-colorfavicon.png",
    "48": "wonderflow-colorfavicon.png",
    "128": "wonderflow-colorfavicon.png"
  },
  "action": {
    "default_icon": {
      "16": "wonderflow-colorfavicon.png",
      "48": "wonderflow-colorfavicon.png",
      "128": "wonderflow-colorfavicon.png"
    },
    "default_title": "Open Wonderflow"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
